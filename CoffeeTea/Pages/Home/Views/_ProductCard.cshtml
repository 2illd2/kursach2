@model CoffeeTea.Pages.Home.Models.CardItem

<div class="col">
    <div class="card h-100 border-0 shadow-hover">
        @if (!string.IsNullOrWhiteSpace(Model.ImageUrl))
        {
            <div class="card-image-container">
                <img class="card-img-top" src="@Model.ImageUrl" alt="@Model.Title" />
                @if (!string.IsNullOrWhiteSpace(Model.Badge))
                {
                    <span class="badge bg-warning text-dark position-absolute top-0 end-0 m-2">@Model.Badge</span>
                }
            </div>
        }
        <div class="card-body d-flex flex-column">
            <h5 class="card-title fw-bold text-dark mb-2">@Model.Title</h5>
            <p class="card-text text-muted mb-3 flex-grow-1">@Model.Text</p>
            @if (!string.IsNullOrWhiteSpace(Model.Link))
            {
                <a class="btn btn-outline-primary rounded-pill align-self-start mt-auto" href="@Model.Link">
                    Подробнее
                    <i class="fas fa-arrow-right ms-2"></i>
                </a>
            }
        </div>
    </div>
</div>